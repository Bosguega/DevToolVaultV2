<Window x:Class="DevToolVaultV2.Features.TreetoFiles.TreetoFilesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Tree to Files - Converter Árvore em Arquivos" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Modern button style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3E8E41"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox style -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Consolas, Courier New, Monospace"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="🌳 Tree to Files Converter" FontSize="24" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center"/>
            <TextBlock Text="Converta estruturas de árvore textual em arquivos e pastas reais" FontSize="14" Foreground="#666" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Main content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Input section -->
            <GroupBox Grid.Column="0" Header="🌲 Entrada - Estrutura de Árvore Textual" FontWeight="Bold" Foreground="#444" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Cole ou digite a estrutura de árvore:" VerticalAlignment="Center" FontWeight="Normal"/>
                        <Button Content="🧹 Limpar" Command="{Binding ClearTreeCommand}" Margin="10,0,0,0" Background="#FF6B6B"/>
                        <Button Content="➡️ Para Mermaid" Command="{Binding ConvertToMermaidCommand}" Margin="5,0,0,0" Background="#2196F3" ToolTip="Converter árvore para Mermaid"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <TextBox Text="{Binding InputTreeText, UpdateSourceTrigger=PropertyChanged}" 
                                 AcceptsReturn="True" 
                                 TextWrapping="NoWrap"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 MinHeight="300"
                                 ToolTip="Exemplo:&#x0a;📁 project&#x0a;├── 📁 src&#x0a;│   ├── 📄 main.js&#x0a;│   └── 📄 index.html&#x0a;└── 📄 README.md"/>
                    </ScrollViewer>
                </Grid>
            </GroupBox>

            <!-- Output section -->
            <GroupBox Grid.Column="1" Header="🎯 Saída - Diagrama Mermaid" FontWeight="Bold" Foreground="#444" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Diagrama Mermaid:" VerticalAlignment="Center" FontWeight="Normal"/>
                        <Button Content="🧹 Limpar" Command="{Binding ClearMermaidCommand}" Margin="10,0,0,0" Background="#FF6B6B"/>
                        <Button Content="⬅️ Para Árvore" Command="{Binding ConvertToTreeCommand}" Margin="5,0,0,0" Background="#9C27B0" ToolTip="Converter Mermaid para árvore ASCII"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <TextBox Text="{Binding MermaidOutput, UpdateSourceTrigger=PropertyChanged}" 
                                 AcceptsReturn="True" 
                                 TextWrapping="NoWrap"
                                 Background="#F8F8F8"
                                 MinHeight="300"
                                 ToolTip="Cole ou edite o diagrama Mermaid aqui">
                            <TextBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Recortar" Command="ApplicationCommands.Cut" InputGestureText="Ctrl+X"/>
                                    <MenuItem Header="Copiar" Command="ApplicationCommands.Copy" InputGestureText="Ctrl+C"/>
                                    <MenuItem Header="Colar" Command="ApplicationCommands.Paste" InputGestureText="Ctrl+V"/>
                                    <Separator/>
                                    <MenuItem Header="Selecionar Tudo" Command="ApplicationCommands.SelectAll" InputGestureText="Ctrl+A"/>
                                </ContextMenu>
                            </TextBox.ContextMenu>
                        </TextBox>
                    </ScrollViewer>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Directory selection and options -->
        <GroupBox Grid.Row="2" Header="📂 Configurações de Criação" FontWeight="Bold" Foreground="#444" Padding="15" Margin="0,20,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Directory selection -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Diretório destino:" VerticalAlignment="Center" FontWeight="Normal" Margin="0,0,10,0"/>
                    
                    <Border Grid.Column="1" Background="White" BorderBrush="#CCC" BorderThickness="1" CornerRadius="3" Padding="8" Margin="0,0,10,0">
                        <TextBlock Text="{Binding SelectedDirectory}" VerticalAlignment="Center" 
                                   Foreground="{x:Static SystemColors.GrayTextBrush}"
                                   FontStyle="Italic">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedDirectory}" Value="">
                                            <Setter Property="Text" Value="Nenhum diretório selecionado..."/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SelectedDirectory}" Value="{x:Null}">
                                            <Setter Property="Text" Value="Nenhum diretório selecionado..."/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>
                    
                    <Button Grid.Column="2" Content="📁 Selecionar" Command="{Binding SelectDirectoryCommand}" Background="#FF9800"/>
                </Grid>

                <!-- Options -->
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding CreateEmptyFiles}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Criar arquivos vazios (caso contrário, apenas estrutura de pastas)" VerticalAlignment="Center" FontWeight="Normal"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Action buttons -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Progress indicator -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center"
                        Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="0,0,10,0"/>
                <TextBlock Text="Criando estrutura de arquivos..." VerticalAlignment="Center" FontStyle="Italic" Foreground="#666"/>
            </StackPanel>

            <!-- Action buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="🚀 Criar Arquivos e Pastas" 
                        Command="{Binding CreateFilesCommand}" 
                        Background="#4CAF50" 
                        Padding="20,10"
                        FontSize="14"/>
                <Button Content="❌ Fechar" 
                        Command="{Binding CloseCommand}" 
                        Background="#757575"
                        Padding="15,10"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>