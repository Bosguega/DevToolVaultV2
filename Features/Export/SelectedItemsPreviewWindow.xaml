<Window x:Class="DevToolVaultV2.Features.Export.SelectedItemsPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Visualizar Itens Selecionados" Height="500" Width="600"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="{Binding HeaderText}" 
                   FontFamily="Consolas" FontSize="14" FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- File List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <TextBox Text="{Binding FileListText}" 
                     IsReadOnly="True" 
                     FontFamily="Consolas" FontSize="12"
                     Background="White" BorderThickness="1"
                     BorderBrush="LightGray" Padding="10"
                     TextWrapping="NoWrap"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"/>
        </ScrollViewer>

        <!-- Close Button -->
        <Button Grid.Row="2" Content="Fechar" Width="80" Height="30" 
                HorizontalAlignment="Right" Margin="0,15,0,0"
                IsDefault="True" Click="Close_Click"/>
    </Grid>
</Window>