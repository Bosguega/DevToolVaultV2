<Window x:Class="DevToolVaultV2.Features.Export.ExportarCodigoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevToolVaultV2.Features.Export"
        xmlns:controls="clr-namespace:DevToolVaultV2.Controls"
        mc:Ignorable="d"
        Title="Exportar Código" Height="600" Width="900">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Caminhos e filtros -->
        <Grid Grid.Row="0" Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Caminho da pasta -->
            <TextBox Grid.Column="0" Text="{Binding CurrentPath}" IsReadOnly="True" Margin="0,0,5,0" VerticalAlignment="Center"/>
            
            <!-- Botão Selecionar Pasta -->
            <Button Grid.Column="1" Content="Selecionar Pasta" Command="{Binding SelectFolderCommand}" Margin="5,0"/>
            
            <!-- Botão Selecionar Filtro -->
            <Button Grid.Column="2" Content="Selecionar Filtro" Command="{Binding SelectFilterCommand}" Margin="5,0"/>
            
            <!-- Filtro atual -->
            <TextBlock Grid.Column="3" Text="{Binding CurrentFilterName, StringFormat='Filtro: {0}'}" 
                       VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold"/>
        </Grid>

        <!-- Árvore de arquivos -->
        <GroupBox Grid.Row="1" Header="Estrutura de Arquivos">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                    <Button Content="Expandir Todos" Command="{Binding ExpandAllCommand}" Margin="0,0,5,0"/>
                    <Button Content="Recolher Todos" Command="{Binding CollapseAllCommand}" Margin="0,0,5,0"/>
                    <CheckBox Content="Selecionar Todos" IsChecked="{Binding SelectAll, Mode=TwoWay}"/>
                </StackPanel>

                <controls:FileSystemTreeView x:Name="fileTreeView" Grid.Row="1" Items="{Binding FileSystemItems}" />
            </Grid>
        </GroupBox>

        <!-- Botões de exportação -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
            <Button Content="Exportar TXT" Command="{Binding ExportTextCommand}" Width="120" Margin="5,0"/>
            <Button Content="Exportar MD" Command="{Binding ExportMarkdownCommand}" Width="120" Margin="5,0"/>
            <Button Content="Exportar PDF" Command="{Binding ExportPdfCommand}" Width="120" Margin="5,0"/>
            <Button Content="Exportar ZIP" Command="{Binding ExportZipCommand}" Width="120" Margin="5,0"/>
        </StackPanel>

        <!-- Barra de progresso -->
        <ProgressBar Grid.Row="3" Height="20" Margin="0,5"
                     IsIndeterminate="True"
                     Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
    </Grid>
</Window>
