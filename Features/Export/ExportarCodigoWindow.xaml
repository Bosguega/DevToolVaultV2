<Window x:Class="DevToolVaultV2.Features.Export.ExportarCodigoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevToolVaultV2.Features.Export"
        xmlns:controls="clr-namespace:DevToolVaultV2.Controls"
        mc:Ignorable="d"
        Title="Exportar Código" Height="600" Width="900">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Caminhos e filtros -->
        <Grid Grid.Row="0" Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Caminho da pasta -->
            <TextBox Grid.Column="0" Text="{Binding CurrentPath}" IsReadOnly="True" Margin="0,0,5,0" VerticalAlignment="Center"/>
            
            <!-- Botão Selecionar Pasta -->
            <Button Grid.Column="1" Content="Selecionar Pasta" Command="{Binding SelectFolderCommand}" Margin="5,0"/>
            
            <!-- Botão Selecionar Filtro -->
            <Button Grid.Column="2" Content="Selecionar Filtro" Command="{Binding SelectFilterCommand}" Margin="5,0"/>
            
            <!-- Filtro atual -->
            <TextBlock Grid.Column="3" Text="{Binding CurrentFilterName, StringFormat='Filtro: {0}'}" 
                       VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold"/>
        </Grid>

        <!-- Árvore de arquivos -->
        <GroupBox Grid.Row="1" Header="Estrutura de Arquivos">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                    <Button Content="Expandir Todos" Command="{Binding ExpandAllCommand}" Margin="0,0,5,0"/>
                    <Button Content="Recolher Todos" Command="{Binding CollapseAllCommand}" Margin="0,0,5,0"/>
                    <CheckBox Content="Selecionar Todos" IsChecked="{Binding SelectAll, Mode=TwoWay}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>

                <controls:FileSystemTreeView x:Name="fileTreeView" Grid.Row="1" Items="{Binding FileSystemItems}" />
            </Grid>
        </GroupBox>

        <!-- Botões de ação -->
        <GroupBox Grid.Row="2" Header="Ações" Margin="0,5,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Status de seleção -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15" HorizontalAlignment="Center">
                    <TextBlock Text="📄 Arquivos selecionados: " FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding SelectedItemsCount}" 
                               Foreground="Blue" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                    <TextBlock Text=" arquivos" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>
                
                <!-- Botões principais -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0" Content="👁️ Visualizar Selecionados" 
                            Command="{Binding PreviewSelectedCommand}" 
                            Margin="0,0,10,0" Padding="15,10"
                            ToolTip="Visualizar lista dos arquivos selecionados (apenas arquivos)"/>
                            
                    <Button Grid.Column="1" Content="📦 Exportar Arquivos" 
                            Command="{Binding ExportSelectedCommand}" 
                            Margin="10,0,0,0" Padding="15,10"
                            ToolTip="Exportar arquivos selecionados (apenas arquivos, não pastas)"/>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- Barra de progresso e status -->
        <StackPanel Grid.Row="3" Margin="0,5,0,0">
            <ProgressBar Height="20" 
                         IsIndeterminate="True"
                         Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <TextBlock Text="⏳ Carregando estrutura de arquivos..." 
                       HorizontalAlignment="Center"
                       FontStyle="Italic" Foreground="Gray"
                       Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" 
                       Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>
