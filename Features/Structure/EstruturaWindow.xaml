<Window x:Class="DevToolVaultV2.Features.Structure.EstruturaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DevToolVaultV2.Features.Structure"
        xmlns:converters="clr-namespace:DevToolVaultV2.Converters"
        Title="Estrutura de Pastas" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Parte superior: seleção de pasta + filtro -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Caminho da pasta -->
            <TextBox Grid.Column="0"
                     Text="{Binding SelectedPath, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,0,5,0"
                     VerticalAlignment="Center"/>

            <!-- Botão Procurar Pasta -->
            <Button Grid.Column="1" Content="Procurar Pasta" 
                    Command="{Binding BrowseFolderCommand}" Margin="5,0"/>

            <!-- Botão Selecionar Filtro -->
            <Button Grid.Column="2" Content="Selecionar Filtro" 
                    Command="{Binding SelectFilterCommand}" Margin="5,0"/>

            <!-- Perfil ativo -->
            <TextBlock Grid.Column="3" 
                       Text="{Binding CurrentProfileName, StringFormat='Perfil Atual: {0}'}" 
                       VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold"/>
        </Grid>

        <!-- Tree display area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <TextBox Text="{Binding TreeText, Mode=OneWay}" 
                     IsReadOnly="True" 
                     Background="White"
                     FontFamily="Consolas, Courier New, Monospace"
                     FontSize="12"
                     TextWrapping="NoWrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1"
                     Padding="10"/>
        </ScrollViewer>

        <!-- Buttons area -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <!-- Tree display toggle -->
            <StackPanel Orientation="Horizontal" Margin="0,0,20,0" VerticalAlignment="Center">
                <TextBlock Text="Formato:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                <RadioButton Content="ASCII" IsChecked="{Binding UseAsciiTree}" GroupName="TreeFormat" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <RadioButton Content="Gráfico" IsChecked="{Binding UseAsciiTree, Converter={StaticResource InverseBooleanConverter}}" GroupName="TreeFormat" VerticalAlignment="Center"/>
            </StackPanel>
            
            <!-- Action buttons -->
            <Button Content="Copiar Estrutura" Width="120" Margin="5,0" Command="{Binding CopyStructureCommand}"/>
            <Button Content="Salvar Estrutura" Width="120" Margin="5,0" Command="{Binding SaveStructureCommand}"/>
            <Button Content="Fechar" Width="100" Margin="5,0" Command="{Binding CloseCommand}"/>
        </StackPanel>
    </Grid>
</Window>
